@model List<WebApplication4.Models.Products>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Ürün Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @if (Model != null)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].iProductId</td>
                <td>@Model[i].Categories.cCategoriesName</td>
                <td>@Model[i].cProductName</td>
                <td><a href="/Products/Delete/@Model[i].iProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Products/UpdateProducts/@Model[i].iProductId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    }
</table>
<a href="/Products/AddProducts/" class="btn btn-primary">Yeni Ürün</a>

